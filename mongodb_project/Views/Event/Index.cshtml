@using mongodb_project.VM
@model HomeVM

@{
    ViewData["Title"] = "Tədbirlər";
    int n = 1;
}

<div class="d-flex justify-content-end mb-3">
    <a href="/event/create" class="btn btn-primary">Yenisini yarat</a>
</div>
<form asp-action="Filter">
    <div class=" d-flex justify-content-between mb-3">
        <div class="input-group">
            <input asp-for="search" class="form-control" placeholder="Tədbirin adı" />
            <input asp-for="DateTime" class="form-control" type="date" value="@ViewBag.Date" />
            <button class="btn btn-outline-primary" type="submit">Axtar</button>
        </div>
    </div>
</form>
<table class="table">

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Məzmun</th>
            <th scope="col">Tarixi</th>
            <th scope="col">Yaradılma Tarixi</th>
            <th scope="col">Ayarlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Event)
        {
            <tr>
                <th scope="row">@n</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Date</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a asp-action="update" class="btn btn-warning" asp-route-id="@item.Id.ToString()"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-edit"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path><path d="M16 5l3 3"></path></svg></a>

                    <a asp-action="Delete" class="btn btn-danger delete-btn" asp-route-id="@item.Id.ToString()"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M4 7l16 0"></path><path d="M10 11l0 6"></path><path d="M14 11l0 6"></path><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path></svg></a>
                </td>
            </tr>
            n++;
        }
    </tbody>
</table>
@section ScriptModal {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>

    <script src="~/assets/js/AlertModal.js"></script>
}

